<%include ../partials/header%>
<%# <nav class="navbar navbar-dark bg-dark"> %>
   



<%# main container starts %>
<div class="container">
    
    <div class="jumbotron jumbotron-fluid" style="margin-top:90px;">
        <%# second container starts %>
        <div class="container">
            <h1>welcome to  OlgyCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <%# this link ask the servant to get /campgrounds/new where the form is located%>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add A new campground</a>
            </p>


            <%# second container ends %>
        </div>
        <%# jumbotron ends %>
    </div>
    
    <div class="row">   

        <%campgrounds.forEach((campground)=>{%>
      
            <div class="col-sm-6 col-md-4 col-lg-3 mb-3 d-flex justify-content-center">
                <div class="card" style="width: 28rem;">
                    <img class="card-img-top img-thumbnail border-0" src="<%=campground.image%>" alt="image">
                    <div class="card-body text-center">
                        <p class="card-text"><%=campground.name%></p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More info</a>
                    </div>
                </div>
                <%# end %>
            </div>

    
        <%})%>

        <%# row ends here   %>
    </div>



    <%# main container ends    %>
</div>




<%include ../partials/footer%>